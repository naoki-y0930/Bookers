
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="editbook">Edit Comment</h1>
      <%= form_for [@book, @book_comment] do |f| %>
      <%= f.text_area :comment, rows: '3', class: "rows" %>
      <br>
      <%= f.submit 'Update', class: "btn btn-primary rows" %>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
