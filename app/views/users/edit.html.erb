  <div class="container">
   <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
       <% if @user.errors.any? %>
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
         <ul>
          <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
         <% end %>
        <h1 class="editbook">User info</h1>
        <h4>Name</h4>
         <%= f.text_field :name, class: "rows" %>
        <h4>Image</h4>
         <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %>
         <%= f.attachment_field :profile_image %>
        <h4>Introduction</h4>
         <%= f.text_area :introduction, class: "rows" %>
          <br>
         <%= f.submit 'Update User', class: "btn btn-success rows" %>
        <% end %>
       <div class="col-md-3"></div>
      </div>
     </div>
    </div>
