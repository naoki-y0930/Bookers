<h1>User info</h1>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
<ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>


<h4>Name</h4>
<%= f.text_field :name %>
<h4>Image</h4>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %>
<%= f.attachment_field :profile_image %>
<h4>Introduction</h4>
<%= f.text_area :introduction %>
<%= f.submit 'Update User' %>
<% end %>
