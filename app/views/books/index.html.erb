<%= render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
<tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %></td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
  </tr>
<% end %>
</tbody>
</table>
