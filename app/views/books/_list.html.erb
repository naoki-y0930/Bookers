 <%= form_for(book) do |f| %>
  <h1 class="span">New book</h1>
   <h4>Title</h4>
    <%= f.text_field :title, placeholder: "book title", class: "rows" %>
   <h4>Opinion</h4>
    <%= f.text_area :body, rows: "3", placeholder: "book opinion", class: "rows" %>
     <div class="submit">
      <%= f.submit 'Create Book', class: "btn btn-primary rows" %>
    </div>
   <% end %>
