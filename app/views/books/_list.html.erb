<h1 class="span">New book</h1>

<%= form_for(book) do |f| %>
<% if book.errors.any? %>
<h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
<ul>
  <% book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>
</ul>

<h4>Title</h4>
<%= f.text_field :title, placeholder: "book title" %>
