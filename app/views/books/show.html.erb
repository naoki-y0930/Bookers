<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<%= render 'users/list', user: @user %>
<%= render 'books/list', book: @books %>

<h1>Book detail</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>user</th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
<tbody>
  <tr>
    <td><%= link_to (attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.png"), user_path(@user) %>
    <br><%= link_to @book.user.name, user_path(@user), class: "label label-primary" %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if current_user.id == @book.user_id %>
    <td><%= link_to 'edit', edit_book_path(@book) %></td>
    <td><%= link_to 'Destroy', book_path(@book), method: :delete,
      data:{confirm: 'Are you sure?'} %></td>
<% else %>

<% end %>
  </tr>
</tbody>
</table>
